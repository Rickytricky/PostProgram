@model PostProgram.Models.Post
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Deseas eliminar el post: @Model.Title ?</h3>

<div class="container">
    @using (Html.BeginForm("Delete", "Home"))
    {
    <div style="display:none;">
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, new { @type = "text", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.CategoryId)
            @Html.TextBoxFor(p => p.CategoryId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Content)
            @Html.TextAreaFor(p => p.Content, new { @class = "form-control" })
        </div>
    </div>
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-warning"><a href="javascript:void(0);" onclick="history.go(-1);">Cancelar</a></button>
    }
</div>
