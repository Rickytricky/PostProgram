@model PostProgram.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


<div class="container">
    @using (Html.BeginForm("Edit", "Home"))
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, new { @type = "text", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.CategoryId)
            @Html.TextBoxFor(p => p.CategoryId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Content)
            @Html.TextAreaFor(p => p.Content, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-danger"><a href="javascript:void(0);" onclick="history.go(-1);">Cancelar</a></button>
    }
</div>

